extends layout.jade

block append scripts
    script(src='/javascripts/main.js')


block content
    #questions
        .row.question-block(style="display:none")
            .col
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Question 4
                    .panel-body
                        .row
                            .col-xs-12
                                p.question-text Panel content
                        .row
                            .col-sm-6.col-sm-offset-6
                                .input-group
                                    input.form-control(type='text', placeholder='Answer')
                                    span.input-group-btn
                                        button.btn.btn-default(type='button') Check
    include partials/gen-button